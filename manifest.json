{
    "manifest_version": 2,
    "name": "History Manager",
    "version": "1.0",
    "version_name": "1.0-alpha",

    "default_locale": "en",
    
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },

    "chrome_url_overrides": {
        "newtab": "index.html"
    },

    "optional_permissions": [
        "downloads"
    ],

    "permissions": [
        "bookmarks",
        "history",
        "storage",
        "unlimitedStorage",
        "chrome://favicon/",
        "tabs"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;"
}
